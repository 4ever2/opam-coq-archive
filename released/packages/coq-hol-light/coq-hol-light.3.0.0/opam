depends: [
  "coq" {>= "8.19"}
  "coq-hol-light-real-with-N" {>= "1.0"}
  "coq-fourcolor-reals" {>= "1.4.0"}
]
build: [make "-j%{jobs}%"]
install: [make "install"]
